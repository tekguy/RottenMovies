@using RottenMovies.Common
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Rotten Movies</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="">
		<meta name="author" content="">
        <link href="@Url.Content("~/assets/css/bootstrap.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/assets/css/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
		<link href="@Url.Content("~/assets/css/site.css")" rel="stylesheet" type="text/css" />
		<script src="@Url.Content("~/assets/scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/assets/scripts/bootstrap.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/assets/scripts/knockout-2.2.1.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/assets/scripts/arbor.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/assets/scripts/arbor-tween.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/assets/scripts/graphics.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/assets/scripts/renderer.js")" type="text/javascript"></script>
        
        <!-- Le styles -->
        <style type="text/css">
            body {
                padding-top: 60px;
                padding-bottom: 40px;
            }
        </style>
	</head>
	<body>
      <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
            <a class="brand">Rotten Movies</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li class="active"><li>@Html.ActionLink("Home", "Index", "Home")</li></li>
              <li class="active"><li>@Html.ActionLink("ArborJS Example", "Demo", "Home")</li></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
        @if (ViewData.ContainsKey(Constants.ItemKeys.SuccessMessage) &&  !string.IsNullOrEmpty(ViewData[Constants.ItemKeys.SuccessMessage].ToString()))
        {
            <div class="alert alert-success">@ViewData[Constants.ItemKeys.SuccessMessage].ToString()</div>
        }
        @if (ViewData.ContainsKey(Constants.ItemKeys.ErrorMessage) &&  !string.IsNullOrEmpty(ViewData[Constants.ItemKeys.ErrorMessage].ToString()))
        {
            <div class="alert alert-error">@ViewData[Constants.ItemKeys.ErrorMessage].ToString()</div>
        }
        @RenderBody()
      <hr>
      <footer>
        <p>Developed by <a href="http://gordondurgha.com" target="_blank">Gordon Durgha</a></p>
      </footer>
    </div> <!-- /container -->

	</body>
</html>
